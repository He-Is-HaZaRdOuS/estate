<odoo>

    <record id="estate_property_offer_model_tree_view" model="ir.ui.view">
        <field name="name">estate.property.offer.tree</field>
        <field name="model">estate.property.offer</field>
        <field name="arch" type="xml">
            <tree decoration-success="status=='accepted'" decoration-danger="status=='rejected'">
                <field name="status" optional="hidden"/>
                <field name="price"/>
                <field name="partner_id"/>
                <field name="validity"/>
                <field name="date_deadline"/>
            </tree>
        </field>
    </record>


    <record id="estate_property_offer_model_action" model="ir.actions.act_window">
        <field name="name">Property Offers</field>
        <field name="res_model">estate.property.offer</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="estate_property_offer_model_tree_view"/>
        <field name="domain">[('property_type_id', '=', active_id)]</field>
    </record>

</odoo>
