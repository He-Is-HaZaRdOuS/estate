<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="estate_group_user" model="res.groups">
        <field name="name">Agent</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
    </record>
    <record id="estate_group_manager" model="res.groups">
        <field name="name">Manager</field>
        <field name="category_id" ref="base.module_category_real_estate_brokerage"/>
        <field name="implied_ids" eval="[(4, ref('estate_group_user'))]"/>
    </record>

    <record id="estate_agent_exclusive_access" model="ir.rule">
        <field name="name">Allows agents to update a property if the property has no salesperson or the agent is the salesperson</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="perm_read" eval="False"/>
        <field name="global" eval="False"/>
        <field name="groups" eval="[Command.link(ref('estate_group_user'))]"/>
        <field name="domain_force">[
            '|', ('seller', '=', user.id),
                 ('seller', '=', False)
        ]
        </field>
    </record>

    <record id="estate_agency_exclusive_access" model="ir.rule">
        <field name="name">Allows employees of an agency access to properties of their agency</field>
        <field name="model_id" ref="model_estate_property"/>
        <field name="global" eval="True"/>
        <field name="domain_force">[
            '|', ('company_id', '=', False),
                 ('company_id', 'in', company_ids)
        ]
        </field>
    </record>
</odoo>
